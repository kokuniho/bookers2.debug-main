
<div class='container'>
  <div class='row'>
    <div class='col-md-3'>
      <h2>User info</h2>
      <%= render 'info', user: current_user %>
        <table class='table'>
          <tr>
            <td>follows: <%= link_to user_followings_path(@user.id) do %>
               <%= @user.followings.count %>
               <% end %>
            </td>
          </tr>
          <tr>
            <td>followers: <%= link_to user_followers_path(@user.id) do %>
               <%= @user.followers.count %>
               <% end %>
            </td>
          </tr>
        </table>

      <h2 class="mt-3">New book</h2>
        <%= render 'books/form', book: @book %>
    </div>
    <div class='col-md-8 offset-md-1'>
      <h2>Users</h2>
       <%= render 'index',users: @users %>
    </div>
  </div>
</div>