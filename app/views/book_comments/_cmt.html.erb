<table>
  <tbody>
      <% book.book_comments.each do |book_comment| %>
      　<tr>

           <td><%= link_to user_path(book_comment.user) do %>
            <%= image_tag book_comment.user.get_profile_image, size: ("100x100") %>
            <!--get_profile_image("100x100")これではだめ　usersの画像を読み込んでしまう-->
           </td>
           <td><%= book_comment.user.name %></td>
          <% end %>
           <td><%= book_comment.comment %></td>

           <td><% if book_comment.user == current_user %>
            <%= link_to "Destroy", book_book_comment_path(book, book_comment), method: :delete, class: "btn btn-danger pull-right", remote: true %>
           <% end %></td>
         </tr>
      <% end %>

  </tbody>
</table>