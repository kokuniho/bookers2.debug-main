


    <table class='table'>

        <!--検索対象モデルがUserの時 -->
        <% if @range == "User" %>


          <h2>User search for "<%= @word %>"</h2>

          <thead>
            <tr>
              <th></th>
              <th>name</th>
              <th>Introduction</th>
              <th colspan="3"></th>
            </tr>
           </thead>
           <tbody>
             <% @users.each do |user| %>
              <tr>
                <td><%= image_tag user.get_profile_image, size:'50x50' %></td>
                <td><%= user.name %></td>
                <td><%= user.introduction %></td>
              </tr>
            <% end %>
          </tbody>

        <% else %>

          <h2>Books search for "<%= @word %>"</h2>
          <thead>
            <tr>
              <th></th>
              <th>Title</th>
              <th>Opinion</th>
              <th colspan="3"></th>
            </tr>
           </thead>
             <% @books.each do |book| %>
          　   <tr>
          　     <td><%= image_tag book.user.get_profile_image, size:'100x100' %></td>
                <td><%= book.title %></td>
                <td><%= book.body %></td>
              </tr>
            <% end %>
          </tbody>
        <% end %>
      </table>





